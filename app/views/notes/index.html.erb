<h1>All Notes</h1>

<%= link_to "New Note", new_note_path %>

<ul>
  <% @notes.each do |note| %>
    <li>
      <%= link_to note.title, note_path(note) %>
      - <%= note.content %>
      <%= link_to "Edit", edit_note_path(note) %>
      <%= link_to "Delete", note_path(note), 
      data: {
         turbo_method: :delete,
         turbo_confirm: "Are you sure?" 
        } %>
    </li>
  <% end %>
</ul>
