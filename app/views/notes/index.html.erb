<div class="h-screen flex bg-zinc-100">

  <!-- Sidebar -->
  <aside class="w-80 border-r border-zinc-200 bg-white flex flex-col">
    <div class="px-6 py-5 border-b border-zinc-200 flex items-center justify-between">
      <h1 class="text-lg font-semibold text-zinc-900">Notes</h1>

      <%= link_to "+",
          new_note_path,
          class: "h-8 w-8 flex items-center justify-center rounded-md bg-zinc-900 text-white text-lg hover:bg-zinc-800"
      %>
    </div>

    <!-- Notes list -->
    <div class="flex-1 overflow-y-auto">
      <% @notes.each do |note| %>
        <%= link_to note_path(note),
            class: "block px-6 py-4 border-b border-zinc-100 hover:bg-zinc-50 transition" do %>

          <h2 class="text-sm font-medium text-zinc-900 truncate">
            <%= note.title %>
          </h2>

          <p class="mt-1 text-xs text-zinc-500 line-clamp-2">
            <%= note.content %>
          </p>

        <% end %>
      <% end %>

      <% if @notes.empty? %>
        <div class="px-6 py-10 text-sm text-zinc-500">
          No notes yet
        </div>
      <% end %>
    </div>
  </aside>

  <!-- Main panel -->
  <main class="flex-1 flex items-center justify-center">
    <div class="max-w-xl text-center px-8">
      <h2 class="text-2xl font-semibold text-zinc-800">
        Select a note
      </h2>
      <p class="mt-2 text-zinc-500">
        Choose a note from the list to view or edit its content.
      </p>
    </div>
  </main>

</div>
